<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Registro'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de Registro</h2>
			</div>
		</div>
		<div class="col-12">

			<form action="" method="POST">
				<div class="row product-detail">
                    <div class="col-12 col-md-6">
						<label for="userName" class="form-label">Ingrese un nombre de usuario:</label>
						<input type="text" id="userName" name="userName" placeholder="Ej: vacalola123" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="email" class="form-label">Ingrese su email:</label>
						<input type="email" id="email" name="email" placeholder="Ej: vacaloca@gmail.com" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="password" class="form-label">Ingrese una contrase√±a</label>
						<input type="password" id="password" name="password" class="form-input">						
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>